{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "react/prop-types": 0,
        "template-curly-spacing": "off",
        "indent": [
            "warn",
            2,
            {
                "ignoredNodes": ["TemplateLiteral"]
            }
        ],
        "linebreak-style": ["warn"],
        "quotes": ["warn", "single"],
        "semi": 0
    }
}
